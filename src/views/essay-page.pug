  script.
    const modalTrigers = document.querySelectorAll(".js-modal-trigger");
    const modal = document.querySelector(".js-modal");
    const modalCloseTriggers = document.querySelectorAll(".js-modal-close");
    const orderLink = document.querySelector(".js-order-link");

    Array.prototype.slice.call(modalTrigers).forEach(function(element) {
      element.addEventListener("click", function(e) {
        const target = e.target;
        const href = target.getAttribute("data-href");

        modal.classList.add("is-visible");
        orderLink.setAttribute("href", href);
      });
    })

    Array.prototype.slice.call(modalCloseTriggers).forEach(function(element) {
      element.addEventListener("click", function(e) {
        modal.classList.remove("is-visible");
      });
    });

  script.
    const Banner = {
      render: function(orderLink) {
        return `
            <div class="top-banner">
              <div class="top-banner__inner container">
                <div class="top-banner__title subtitle subtitle--dark">Order unique essay written for you</div>
                <a class="top-banner__link" href="${orderLink}">ORDER NOW</a>
                <button class="top-banner__close">
                  <span class="visually-hidden">Close top banner</span>
                  <svg width="15" height="14" viewBox="0 0 15 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M14.2641 1.41L12.8696 0L7.34105 5.59L1.81247 0L0.417969 1.41L5.94654 7L0.417969 12.59L1.81247 14L7.34105 8.41L12.8696 14L14.2641 12.59L8.73555 7L14.2641 1.41Z" fill="white"/>
                  </svg>
                </button>
              </div>
            </div>
          `;
      },
      init: function(orderLink, timeout) {
        const baner = this.render(orderLink);

        setTimeout(function() {
          document.body.insertAdjacentHTML('beforeend', baner);

          document.querySelector(".top-banner__close").addEventListener("click", function() {

            document.querySelector(".top-banner").remove();
          });
        }, timeout);
      }
    };

    window.Banner = Banner;
  script.
    window.Banner.init("to-order", 3000);